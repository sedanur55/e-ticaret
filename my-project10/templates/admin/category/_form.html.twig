
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            <form class="forms-sample" method="post">
                <div class="form-group row">
                    <label for="exampleInputConfirmPassword2" class="col-sm-4 col-form-label">Parınt Id</label>
                    <div class="col-sm-8">
                        <select name="category[parentid]" class="form-control">
                            {% if category.parentid!=0 %}
                            <option value="{{ category.parentid }}">{{ category.title }}</option>
                            {% else %}
                            <option value="0">Ana Kategori</option>
                            {% endif %}

                            {% for cat in catlist %}
                            <option value="{{ cat.id }}">{{ cat.title }}</option>
                            {% endfor %}

                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-4 col-form-label">Title</label>
                    <div class="col-sm-8">
                        <input type="text" name="category[title]" value="{{ category.title }}" class="form-control" id="title" placeholder="title">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputMobile" class="col-sm-4 col-form-label">Anahtar Kelime</label>
                    <div class="col-sm-8">
                        <input type="text" name="category[keywords]" value="{{ category.keywords }}" class="form-control" id="keywords" placeholder="keywords">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputPassword2" class="col-sm-4 col-form-label">Kısa Açıklama</label>
                    <div class="col-sm-8">
                        <input type="text" name="category[description]"class="form-control"  value="{{ category.description }}" id="description" placeholder="description">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputConfirmPassword2" class="col-sm-4 col-form-label">Durum</label>
                    <div class="col-sm-8">
                        <select name="category[status]" class="form-control">
                            <option>{{ category.status }}</option>
                            <option>True</option>
                            <option>False</option>

                        </select>
                    </div>
                </div>
                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input">
                        Remember me
                        <i class="input-helper"></i></label>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>