{% extends 'adminbase.html.twig' %}

{% block title %} Yeni Siparişler {% endblock %}

{% block content %}
    <!-- Content -->
<div class="main-panel">
    <div class="content-wrapper">


        <div class="col-lg-10 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">sipariş detayı</h4>
                    <p class="card-description">

                    </p>
                    <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ order.id }}</td>
                </tr>
                <tr>
                    <th>Userid</th>
                    <td>{{ order.userid }}</td>
                </tr>
                <tr>
                    <th>Amount</th>
                    <td>{{ order.amount }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ order.name }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ order.address }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ order.city }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ order.phone }}</td>
                </tr>
                <tr>
                    <th>Shipinfo</th>
                    <td>{{ order.shipinfo }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ order.status }}</td>
                </tr>
                <tr>
                    <th>Note</th>
                    <td>{{ order.note }}</td>
                </tr>
                <form action="{{ path ('admin_orders_update',{'id':order.id}) }}" method="post">
                    <tr>
                        <th>Shipinfo</th>
                        <td><textarea name="shipinfo" cols="100" rows="3">{{ order.shipinfo }}</textarea> </td>
                    </tr>
                    <tr>
                        <th>Admin Note</th>
                        <td><textarea name="note" cols="100" rows="3">{{ order.note }}</textarea> </td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td><select name="status">
                                <option>{{ order.status }}</option>
                                <option>Accepted</option>
                                <option>Inshipping</option>
                                <option>Cancelled</option>
                                <option>Completed</option>

                            </select>
                            <input type="submit" value="Güncelle">
                        </td>


                    </tr>

                </form>

                </tbody>
            </table>

            <a href="{{ path('admin_orders_index',{'slug':'new'}) }}" class="btn btn-gradient-danger btn-sm">Listeye Dön</a>
                    <br>




        </div>
    </div>
</div>
    </div>

    <!-- /.content -->
{% endblock %}
