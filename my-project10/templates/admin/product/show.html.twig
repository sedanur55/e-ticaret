{% extends 'adminbase.html.twig' %}

{% block title %}Product Detay{% endblock %}

{% block content %}
<div class="main-panel">
    <div class="content-wrapper">


        <div class="col-lg-10 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ürün Detayı</h4>
                    <p class="card-description">

                    </p>
                    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ product.keywords }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ product.type }}</td>
            </tr>
            <tr>
                <th>Publisher_id</th>
                <td>{{ product.publisherId }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ product.year }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ product.amount }}</td>
            </tr>
            <tr>
                <th>Pprice</th>
                <td>{{ product.pprice }}</td>
            </tr>
            <tr>
                <th>Sprice</th>
                <td>{{ product.sprice }}</td>
            </tr>
            <tr>
                <th>Min</th>
                <td>{{ product.min }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ product.detail }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Category_id</th>
                <td>{{ product.categoryId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
        </tbody>
                    </table>

                    <a href="{{ path('admin_product_index') }}"class="btn btn-gradient-danger btn-sm">Listeye Git</a>

                    <a href="{{ path('admin_product_edit', {'id': product.id}) }}"class="btn btn-gradient-dark btn-sm">Düzenle</a>

                    {{ include('admin/product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>


    </div>
    {% endblock %}
