{% extends 'adminbase.html.twig' %}

{% block title %}Product Düzenleme{% endblock %}

{% block content %}

    <div class="main-panel">
    <div class="content-wrapper">



    <div class="card">
        <div class="card-body">


            <form class="forms-sample" method="post">
                <div class="form-group row">
                    <label for="exampleInputConfirmPassword2" class="col-sm-4 col-form-label">Parınt Id</label>
                    <div class="col-sm-8">
                        <select name="product[category_id]" class="form-control">
                            {% if (catname) %}
                                <option value="{{ product.categoryid }}">{{ catname[0].title}}</option>
                            {% endif %}

                            {% for cat in catlist %}

                                <option value="{{ cat.id }}">{{ cat.title }}</option>
                            {% endfor %}

                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-4 col-form-label">Category id</label>
                    <div class="col-sm-8">
                        <input type="text" name="product[category_id]"  value="{{ product.categoryid }}" placeholder="categoryid" class="form-control">
                    </div>


                </div>


                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-4 col-form-label">Title</label>
                    <div class="col-sm-8">
                        <input type="text" name="product[title]" value="{{ product.title }}" class="form-control" id="title" placeholder="title">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputMobile" class="col-sm-4 col-form-label">Anahtar Kelime</label>
                    <div class="col-sm-8">
                        <input type="text" name="product[keywords]" value="{{ product.keywords }}" class="form-control" id="keywords" placeholder="keywords">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputPassword2" class="col-sm-4 col-form-label">Kısa Açıklama</label>
                    <div class="col-sm-8">
                        <input type="text" name="product[description]"class="form-control"  value="{{ product.description }}" id="description" placeholder="description">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-4 col-form-label">Amount</label>
                    <div class="col-sm-8">
                        <input type="number" name="product[amount]" value="{{ product.amount }}" class="form-control" id="amount" placeholder="amount">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-4 col-form-label">Sprice</label>
                    <div class="col-sm-8">
                        <input type="number" name="product[sprice]" value="{{ product.sprice }}" class="form-control" id="sprice" placeholder="sprice">
                    </div>
                </div>


                <div class="form-group row">
                    <label for="exampleInputConfirmPassword2" class="col-sm-4 col-form-label">Durum</label>
                    <div class="col-sm-8">
                        <select name="product[status]" class="form-control">
                            <option>{{ product.status }}</option>
                            <option>True</option>
                            <option>False</option>

                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleInputConfirmPassword2" class="col-sm-4 col-form-label">Detay</label>
                    <div class="col-sm-8" >
                        <textarea name="product[detail]" id="editor" cols="30" rows="50">{{ product.detail }}</textarea>
                    </div>


                </div>

                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input">
                        Remember me
                        <i class="input-helper"></i></label>
                </div>
                <button type="submit" class="btn btn-gradient-success btn-sm">Kaydet</button>

                <a href="{{ path('admin_product_index') }}"class="btn btn-gradient-danger btn-sm">Listeye Git</a>

            </form>

            <script>
                ClassicEditor
                    .create( document.querySelector( '#editor' ) )
                    .catch( error => {
                        console.error( error );
                    } );
            </script>
      </div></div></div>



{% endblock %}