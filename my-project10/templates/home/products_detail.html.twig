{% extends 'frontbase.html.twig' %}

{% block title %} {{ data[0].title}} ürün Detay {% endblock %}

{% block sidebar %} {{    include ('home/sidebar.html.twig')  }}    {% endblock %}

{% block content %}

<div class="col-sm-9 padding-right">
    <div class="product-details"><!--product-details-->
        <div class="col-sm-5">
            <div class="view-product">
                <a href="{{ asset('uploads') }}/images/{{ data[0].image }}" >
                    <img src="{{ asset('uploads') }}/images/{{ data[0].image }}" style="width:100%" alt="" />
                </a>
                <h3>ZOOM</h3>
            </div>
            <div id="similar-product" class="carousel slide" data-ride="carousel">

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        {% for rs in images %}
                            <a href="{{ asset('uploads') }}/images/{{ rs.image }}"> <img style="width:24%" src="{{ asset('uploads') }}/images/{{ rs.image }}" alt=""/></a>
                        {% endfor %}

                    </div>

                </div>

                <!-- Controls -->
                <a class="left item-control" href="#similar-product" data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>
                <a class="right item-control" href="#similar-product" data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>

        </div>
        <div class="col-sm-7">
            <div class="product-information"><!--/product-information-->

                <h2>{{ data[0].title }}</h2>
                <p>Açıklama : {{ data[0].description }}</p>
                <p>Özellik : {{ data[0].keywords }}</p>
                <form name="shopcart" class="form-horizontal qtyFrm" action="{{ path ('shopcart_new') }}" method="post">
                    <div class="control-group">
                        <label class="control-label"><span>Fiyat  ${{ data[0].sprice }}</span></label>
                        <div class="controls">

                            <input type="number" name="shopcart[quantity]" class="span1" placeholder="Adet." value="1" max="{{ data[0].amount }}"/>
                            <input type="hidden" name="shopcart[productid]"  value="{{ data[0].id }}"/>

                            <input type="hidden" name="token" value="{{ csrf_token('add.item') }}">
                            <button type="submit" class="btn btn-large btn-primary pull-right"> Add to cart <i class=" icon-shopping-cart"></i></button>
                        </div>
                    </div>
                </form>







            </div><!--/product-information-->
        </div>
    </div><!--/product-details-->




            <div class="tab-pane fade active in" id="reviews" >
                <div class="col-sm-12">
                    <ul>
                        <li><a href=""><i class="fa fa-user"></i>{{ data[0].title }}</a></li>

                        <li><a href=""><i class="fa fa-calendar-o"></i>{{ data[0].year }}</a></li>
                    </ul>
                    <p>{{ data[0].detail|raw }}</p>



                    </form>
                </div>
            </div>

        </div>
    </div><!--/category-tab-->
    </div>  </div>

    {% endblock %}


